<body>


	<!-- form Change Password-->

	<div class="modal fade" role="dialog" tabindex="-1" id="modalChangePass">
		<div class="modal-dialog modal-dialog-centered" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title">เปลี่ยนรหัสผ่าน</h4>
					<button type="button" class="close" aria-label="Close"><i class="fa-solid fa-xmark"></i></button>
				</div>
				<div class="modal-body text-center">

					<div class="input-group">
						<span class="input-group-text">รหัสผ่านใหม่</span>
						<input type="password" aria-label="First name" id="IP-CardPass" class="form-control">
					</div>
				</div>
				<div class="modal-footer">
					<button class="btn btn-secondary no" type="button">ยกเลิก</button>
					<button class="btn btn-success btnYes" id="btnChangePass" type="button">ยืนยัน</button>
				</div>
			</div>
		</div>
	</div>

	<!-- form webcam -->
	<div class="modal fade" role="dialog" tabindex="-1" id="modalWebcam">
		<div class="modal-dialog modal-dialog-centered" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title">Camera</h4><button type="button" class="close" data-dismiss="modal" aria-label="Close"
						onclick="closeCamera();"><span aria-hidden="true">×</span></button>
				</div>
				<div class="modal-body text-center ">
					<div class="camera-box center-box">
						<div id="camera"></div>
						<div class="camera-line">
							<div id="results"></div>
						</div>
					</div>

				</div>
				<div class="modal-footer">
					<button class="btn btn-secondary" type="button" data-dismiss="modal" onclick="closeCamera();">ยกเลิก</button>
					<button class="btn btn-danger btnYes" id="btnTake" type="button" onclick="take_snapshot()">ถ่ายภาพ</button>
					<button class="btn btn-danger btnYes" id="btnSet" type="button" onclick="setCamera()">ถ่ายใหม่</button>
					<button class="btn btn-danger btnYes" id="btnSave" type="button" data-dismiss="modal">บันทึก</button>

				</div>
			</div>
		</div>
	</div>



	<nav class="sidebar">
		<ul>
			<li>
				<!-- <i class="fa-brands fa-facebook-square"></i> -->

				<a class="" href="/"><span class="icon"><i class="fa fa-home" aria-hidden="true"></i></span>
					<p>หน้าแรก</p>
				</a>
			</li>

		</ul>
	</nav>

	<div class="main-content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12 col-s-12 col-md-5 col-xl-5 left d-flex ">
					<div class="box">
						<div class="form-title edit-card mb-3">
							<h2 class="">แก้ไขการ์ด</h2>
							<div class="btn-group">
								<!-- <div class="btn-group center-box ma-10"> -->
								<button class="btn btn-sm btn-success " id="EditCard"><i class="fa fa-floppy-o" aria-hidden="true"></i> การ์ด</button>
								<!-- <button class="btn btn-sm btn-primary m-0" id =""><i class="bi bi-arrow-clockwise"></i></button> -->
								<!-- </div> -->
							</div>

						</div>

						<div class="d-flex justify-content-center align-item-center mb-2">
							<div class="input-group me-2">
								<span class="input-group-text">ชื่อ</span>
								<input type="text" id="IP-fname" class="form-control" placeholder="ชื่อ">
							</div>
							<div class="input-group">
								<span class="input-group-text">นามสกุล</span>
								<input type="text" id="IP-lname" class="form-control" placeholder="นามสกุล">
							</div>
						</div>

						<!-- <div class="input-group">
							<span class="input-group-text">ที่อยู่</span>
							<input type="text" class="form-control">
						</div> -->
						<div class="input-group mb-2">
							<span class="input-group-text">เบอร์มือถือ</span>
							<input type="text" id="IP-Tel" class="form-control" placeholder="ใส่เบอร์มือถือ">
						</div>
						<div class="input-group mb-2">
							<span class="input-group-text">บริษัท</span>
							<input type="text" id="IP-Company" class="form-control" placeholder="ชื่อบริษัท">
						</div>
						<a href="http://"></a>
						<div class="input-group mb-2">
							<span class="input-group-text">Email</span>
							<input type="text" id="IP-Email" class="form-control" placeholder="example@email.com">
						</div>
						<div class="input-group mb-2">
							<span class="input-group-text">Line ID</span>
							<input type="text" id="IP-LineID" class="form-control" placeholder="example">
						</div>
						<div class="input-group mb-2">
							<span class="input-group-text">Facebook</span>
							<input type="text" id="IP-FacebookLink" class="form-control" placeholder="https://www.facebook.com/">
						</div>


						<div class="w-100 mb-3 ">
							<button class="btn btn-sm btn-primary m-0 float-left" id="ChangePass"><i class="fa-solid fa-lock"></i> เปลี่ยนรหัสผ่าน</button>
						</div>

						<div class="mb-3 profile-image">
							<label for="formFile" class=" form-title mb-3">
								<h4 class="m-0">รูปโปรไฟล์</h4>
								<button class="btn btn-sm btn-success m-0" id="btnConfirmImg"><i class="fa fa-floppy-o" aria-hidden="true"></i> รูปภาพ</button>
							</label>


							<div class="center-box h-240 mb-3">
								<div class="camera-line2">
									<img id="mobileImg" src="#" alt="your image" />
									<div class="form-imgInp">
										<label for="imgInp" style="text-align: center;"  data-bs-toggle="tooltip" title="รูปภาพขนาด 320x240" >
											<i class="fa fa-2x fa-camera"></i>
											<input type='file' accept="image/*" capture="camera" id="imgInp" /><br />
											เลือกรูปภาพ
										</label>
									</div>
								</div>
							</div>
						</div>



						<div class="btn-group center-box">
							<button class="btn btn-sm btn-primary m-0" id="publish">เผยเเพร่การ์ด</button>
						</div>
						<div class="btn-group center-box">
							<button class="btn btn-sm btn-danger m-0 hide" id="unpublish">เลิกเผยเเพร่การ์ด</button>
						</div>

						<div class="share-group " id="share-group">

							<label class="mb-2">เเชร์การ์ด</label>
							<div class="a2a_kit a2a_kit_size_32 a2a_default_style" id="share_button" data-a2a-url="#">
								<!-- <a class="a2a_dd" href="https://www.addtoany.com/share"></a> -->
								<a class="a2a_button_facebook"></a>
								<a class="a2a_button_line"></a>
								<a class="a2a_button_facebook_messenger"></a>
								<a class="a2a_button_email"></a>
								<a class="a2a_button_google_gmail"></a>
							</div>
						</div>


					</div>

				</div>

				<!-- Show Card -->
				<div class="col-12 col-s-12 col-md-7 col-xl-7 right">
					<%- include('./partials/pre-box.ejs'); %>
					
				</div>
			</div>
		</div>
	</div>



