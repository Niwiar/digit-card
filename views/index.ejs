<body>
  <%- include('./template/cookie-consent'); %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/cardAuth.css" />
    <link rel="stylesheet" href="/css/modal.css" />

    <div class="modal" role="dialog" tabindex="-1" id="modalCardAuth">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" id="contentCookieSetting">
          <div class="modal-header d-flex">
            <h4 class="modal-title">ลงชื่อเข้าใช้เพื่อแก้ไขการ์ด</h4>
            <button type="button" style="margin-right: 5px;" class="close" data-dismiss="modal" aria-label="Close"><i
                class="fa-solid fa-xmark"></i></button>
          </div>
          <div class="modal-body">
            <form action="/card/auth" method="post">
              <div class="mb-3">
                <label class="form-label">ชื่อการ์ด</label>
                <input class="form-control form-control-lg" type="text" name="CardName"
                  placeholder="ใส่ชื่อการ์ดของคุณ" />
              </div>
              <div class="mb-3">
                <label class="form-label">รหัสการ์ด</label>
                <input class="form-control form-control-lg" type="password" name="CardPass"
                  placeholder="ใส่รหัสการ์ดของคุณ" />
              </div>
              <div class="text-center mt-3">
                <button type="submit" class="btn btn-lg btn-primary">ลงชื่อเข้าใช้</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="modal" role="dialog" tabindex="-1" id="modalCardCreate">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" id="contentCookieSetting">
          <div class="modal-header">
            <h4 class="modal-title">สร้างการ์ดใหม่</h4>
            <button type="button" class="close" style="margin-right: 5px;" data-dismiss="modal" aria-label="Close"><i
                class="fa-solid fa-xmark"></i></button>
          </div>
          <div class="modal-body">
            <!-- <form action="/card/create" method="post"> -->
            <form action="" method="">
              <div class="mb-3">
                <label class="form-label">ชื่อการ์ด</label>
                <input class="form-control form-control-lg" type="text" name="CardName"
                  placeholder="ใส่ชื่อการ์ดที่คุณต้องการ" />
              </div>
              <div class="mb-3">
                <label class="form-label">รหัสการ์ด</label>
                <input class="form-control form-control-lg" type="password" name="CardPass"
                  placeholder="ใส่รหัสการ์ดที่คุณต้องการ" />
              </div>
            </form>
            <div class="text-center mt-3">
              <button type="submit" class="btn btn-lg btn-primary" id="btn_CardCreate">สร้างการ์ด</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="header">
      <h2 class="text-head">Priva Digital Card</h2>
      <img class="logo-priva" src="/imgs/logos/logo.png" alt="">
    </div>

    <div class="main ">
      <div class="row w-100 ">
        <div class=" col col-12 col-md-6 p-3">
          <div class="btn-card bg-secondary" data-toggle="modal" data-target="#modalCardCreate">
            <div>
              <i class="fa-regular fa-square-plus"></i>
              <p class="lead">สร้างการ์ดใหม่</p>
            </div>
          </div>
        </div>
        <div class="col col-12">
          <div class="btn-card bg-primary" data-toggle="modal" data-target="#modalCardAuth">
            <div>
              <i class="fa-regular fa-pen-to-square"></i>
              <p class="lead">แก้ไขการ์ด</p>
            </div>
          </div>
        </div>
      </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="/fonts/icon_fontawesome.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.14/dist/sweetalert2.all.min.js"></script>
