<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <title>Priva Card</title>

</head>

<body>
  <%- include('./template/cookie-consent'); %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/cardAuth.css" />
  <link rel="stylesheet" href="/css/modal.css" />

    <div class="modal" role="dialog" tabindex="-1" id="modalCardAuth">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" id="contentCookieSetting">
          <div class="modal-header d-flex">
            <h4 class="modal-title">ลงชื่อเข้าใช้เพื่อแก้ไขการ์ด</h4>
            <button type="button" style="margin-right: 5px;" class="close" data-dismiss="modal" aria-label="Close"><i class="fa-solid fa-xmark"></i></button>
          </div>
          <div class="modal-body">
            <form action="/card/auth" method="post">
              <div class="mb-3">
                <label class="form-label">ชื่อการ์ด</label>
                <input class="form-control form-control-lg" type="text" name="CardName"
                  placeholder="ใส่ชื่อการ์ดของคุณ" />
              </div>
              <div class="mb-3">
                <label class="form-label">รหัสการ์ด</label>
                <input class="form-control form-control-lg" type="password" name="CardPass"
                  placeholder="ใส่รหัสการ์ดของคุณ" />
              </div>
              <div class="text-center mt-3">
                <button type="submit" class="btn btn-lg btn-primary">ลงชื่อเข้าใช้</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="modal" role="dialog" tabindex="-1" id="modalCardCreate">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" id="contentCookieSetting">
          <div class="modal-header">
            <h4 class="modal-title">สร้างการ์ดใหม่</h4>
            <button type="button" class="close" style="margin-right: 5px;" data-dismiss="modal" aria-label="Close"><i class="fa-solid fa-xmark"></i></button>
          </div>
          <div class="modal-body">
            <form action="/card/create" method="post">
              <div class="mb-3">
                <label class="form-label">ชื่อการ์ด</label>
                <input class="form-control form-control-lg" type="text" name="CardName"
                  placeholder="ใส่ชื่อการ์ดที่คุณต้องการ" />
              </div>
              <div class="mb-3">
                <label class="form-label">รหัสการ์ด</label>
                <input class="form-control form-control-lg" type="password" name="CardPass"
                  placeholder="ใส่รหัสการ์ดที่คุณต้องการ" />
              </div>
              <div class="text-center mt-3">
                <button type="submit" class="btn btn-lg btn-primary">สร้างการ์ด</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="header">
      <h4 class="">Priva Digital Card</h4>
      <img class="logo-priva" src="/imgs/logos/logo.png" alt="">
    </div>

    <div class="main ">
      <!-- edit card -->
      <!-- <div class="text-center btn-card">
        <p class="lead btn btn-primary" data-toggle="modal" data-target="#modalCardAuth">แก้ไขการ์ด</p>
      </div> -->

      <!-- add card -->
      <!-- <div class="text-center btn-card">
        <p class="lead btn btn-secondary" data-toggle="modal" data-target="#modalCardCreate">สร้างการ์ดใหม่</p>
      </div> -->

      <div class="row h-25 w-100 ">
        <div class="col-12 col-md-6 p-3">
          <div class="btn-card bg-primary">
            <p class="lead" data-toggle="modal" data-target="#modalCardAuth">แก้ไขการ์ด</p>
          </div>
        </div>
        <div class="col-12 col-md-6 p-3">
          <div class="btn-card bg-secondary">
            <p class="lead" data-toggle="modal" data-target="#modalCardCreate">สร้างการ์ดใหม่</p>
          </div>
        </div>
      </div>


    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
	  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.14/dist/sweetalert2.all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

    <% if (messages.auth) { %>
    <script>
        $('#modalCardAuth').modal('show')
        Swal.fire({
                    position: 'center',
                    icon: 'warning',
                    title: 'Warning',
                    text: '<%= messages.auth %>',
                    showConfirmButton: true,
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#FF5733'
                });
    </script>
    <% } %>
    <% if (messages.createErr) { %>
      <script>
        $('#modalCardCreate').modal('show')
        Swal.fire({
                    position: 'center',
                    icon: 'warning',
                    title: 'Warning',
                    text: '<%= messages.createErr %>',
                    showConfirmButton: true,
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#FF5733'
                });
      </script>
    <% } %>
    <% if (messages.success) { %>
      <script>
        $('#modalCardCreate').modal('show')
        Swal.fire({
                    position: 'center',
                    icon: 'success',
                    title: 'Success',
                    text: '<%= messages.success %>',
                    showConfirmButton: false,
                    timer: 1500
                })
      </script>
    <% } %>
    
</body>

</html>